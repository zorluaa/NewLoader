-- Loader Script for Void.lua

local function loadScript(gameName)
    if gameName == "Assassin" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/zorluaa/Void1/refs/heads/main/15"))()
    elseif gameName == "Murder VS Sheriff Duels" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/zorluaa/voidmvsd/refs/heads/main/mvsdvoid"))()
    elseif gameName == "Soon" then
        loadstring(game:HttpGet("https://your-link-to-game3-script"))()
    else
        print("No script available for the selected game.")
    end
end

-- User Interface (UI)
local ScreenGui = Instance.new("ScreenGui")
local MainContainer = Instance.new("Frame")
local MainFrame = Instance.new("Frame")
local TextLabel = Instance.new("TextLabel")
local Dropdown = Instance.new("TextButton")
local Game1Button = Instance.new("TextButton")
local Game2Button = Instance.new("TextButton")
local Game3Button = Instance.new("TextButton")
local UpdateLogFrame = Instance.new("Frame")
local UpdateLogLabel = Instance.new("TextLabel")
local UICorner = Instance.new("UICorner") -- Rounded corners

ScreenGui.Parent = game.CoreGui

MainContainer.Parent = ScreenGui
MainContainer.BackgroundColor3 = Color3.fromRGB(45, 0, 94) -- Purple background
MainContainer.Position = UDim2.new(0.5, -300, 0.5, -150)
MainContainer.Size = UDim2.new(0, 600, 0, 300)
MainContainer.BorderSizePixel = 0
MainContainer.BackgroundTransparency = 0.15

local containerUICorner = UICorner:Clone()
containerUICorner.Parent = MainContainer

MainFrame.Parent = MainContainer
MainFrame.BackgroundColor3 = Color3.fromRGB(60, 0, 120) -- Darker purple
MainFrame.Position = UDim2.new(0, 0, 0, 0)
MainFrame.Size = UDim2.new(0, 400, 0, 300)
MainFrame.BorderSizePixel = 0

TextLabel.Parent = MainFrame
TextLabel.BackgroundColor3 = Color3.fromRGB(35, 0, 70)
TextLabel.Size = UDim2.new(1, 0, 0, 50)
TextLabel.Font = Enum.Font.GothamBold
TextLabel.Text = "Void.lua Loader"
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.TextSize = 26
TextLabel.TextAlignment = Enum.TextAlignment.Center

UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = TextLabel

Dropdown.Parent = MainFrame
Dropdown.BackgroundColor3 = Color3.fromRGB(75, 0, 150) -- Purple button
Dropdown.Position = UDim2.new(0.1, 0, 0.35, 0)
Dropdown.Size = UDim2.new(0.8, 0, 0.15, 0)
Dropdown.Font = Enum.Font.Gotham
Dropdown.Text = "Select Game"
Dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
Dropdown.TextSize = 20
Dropdown.TextAlignment = Enum.TextAlignment.Center

UICorner:Clone().Parent = Dropdown

local function styleButton(button)
    button.BackgroundColor3 = Color3.fromRGB(90, 0, 180) -- Light purple button
    button.Size = UDim2.new(0.8, 0, 0.12, 0)
    button.Font = Enum.Font.Gotham
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextSize = 18
    button.AutoButtonColor = false

    local buttonUICorner = UICorner:Clone()
    buttonUICorner.Parent = button

    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(100, 0, 200) -- Hover effect
    end)

    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(90, 0, 180) -- Default color
    end)
end

Game1Button.Parent = MainFrame
Game1Button.Position = UDim2.new(0.1, 0, 0.55, 0)
Game1Button.Text = "Assassin"
Game1Button.Visible = false
styleButton(Game1Button)

Game2Button.Parent = MainFrame
Game2Button.Position = UDim2.new(0.1, 0, 0.7, 0)
Game2Button.Text = "Murder VS Sheriff Duels"
Game2Button.Visible = false
styleButton(Game2Button)

Game3Button.Parent = MainFrame
Game3Button.Position = UDim2.new(0.1, 0, 0.85, 0)
Game3Button.Text = "Soon"
Game3Button.Visible = false
styleButton(Game3Button)

UpdateLogFrame.Parent = MainContainer
UpdateLogFrame.BackgroundColor3 = Color3.fromRGB(40, 0, 80) -- Lighter purple
UpdateLogFrame.Position = UDim2.new(0, 400, 0, 0) 
UpdateLogFrame.Size = UDim2.new(0, 200, 0, 300)
UpdateLogFrame.BorderSizePixel = 0

local updateLogUICorner = UICorner:Clone()
updateLogUICorner.Parent = UpdateLogFrame

UpdateLogLabel.Parent = UpdateLogFrame
UpdateLogLabel.BackgroundColor3 = Color3.fromRGB(30, 0, 60)
UpdateLogLabel.Size = UDim2.new(1, 0, 1, 0)
UpdateLogLabel.Font = Enum.Font.Gotham
UpdateLogLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
UpdateLogLabel.TextSize = 16
UpdateLogLabel.TextWrapped = true
UpdateLogLabel.Text = "Update Log:\n\n• [+] New Custom UI\n• [+] A Loader\n• Credits: Zor For The Script\n• Credits: LUNR For Making The UI"

local function toggleButtons()
    local isVisible = Game1Button.Visible
    local buttonList = {Game1Button, Game2Button, Game3Button}

    if isVisible then
        for _, button in pairs(buttonList) do
            button:TweenSize(UDim2.new(0.8, 0, 0, 0), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
        end
    else
        for _, button in pairs(buttonList) do
            button.Visible = true
            button:TweenSize(UDim2.new(0.8, 0, 0.12, 0), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
        end
    end
end

Dropdown.MouseButton1Click:Connect(toggleButtons)

Game1Button.MouseButton1Click:Connect(function()
    loadScript("Assassin")
    ScreenGui:Destroy() -- Destroy the loader after selection
end)

Game2Button.MouseButton1Click:Connect(function()
    loadScript("Murder VS Sheriff Duels")
    ScreenGui:Destroy() -- Destroy the loader after selection
end)

Game3Button.MouseButton1Click:Connect(function()
    loadScript("Soon")
    ScreenGui:Destroy() -- Destroy the loader after selection
end)

-- Draggable UI
local dragging
local dragInput
local dragStart
local startPos

local function updateInput(input)
    local delta = input.Position - dragStart
    MainContainer.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

MainContainer.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainContainer.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

MainContainer.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        updateInput(input)
    end
end)
