-- UI Creation
local ScreenGui = Instance.new("ScreenGui")
local MainContainer = Instance.new("Frame")
local KeyPrompt = Instance.new("Frame")
local KeyLabel = Instance.new("TextLabel")
local KeyInput = Instance.new("TextBox")  -- TextBox for key input
local SubmitButton = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")

ScreenGui.Parent = game.CoreGui

-- Main Container
MainContainer.Parent = ScreenGui
MainContainer.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainContainer.Size = UDim2.new(0, 600, 0, 350)
MainContainer.Position = UDim2.new(0.5, -300, 0.5, -175)
MainContainer.BackgroundTransparency = 0.3
MainContainer.BorderSizePixel = 0

local containerUICorner = UICorner:Clone()
containerUICorner.Parent = MainContainer

-- Key Prompt Section
KeyPrompt.Parent = MainContainer
KeyPrompt.BackgroundColor3 = Color3.fromRGB(44, 44, 58)
KeyPrompt.Size = UDim2.new(0, 600, 0, 150)
KeyPrompt.Position = UDim2.new(0, 0, 0, 0)
KeyPrompt.BackgroundTransparency = 0.1

local keyLabel = KeyLabel
keyLabel.Parent = KeyPrompt
keyLabel.Size = UDim2.new(1, 0, 0, 50)
keyLabel.Position = UDim2.new(0, 0, 0, 10)
keyLabel.Font = Enum.Font.GothamBold
keyLabel.Text = "Enter Key:"
keyLabel.TextSize = 24
keyLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
keyLabel.TextAlignment = Enum.TextAlignment.Center

local keyInput = KeyInput
keyInput.Parent = KeyPrompt
keyInput.BackgroundColor3 = Color3.fromRGB(55, 55, 70)
keyInput.Size = UDim2.new(0, 500, 0, 40)
keyInput.Position = UDim2.new(0.5, -250, 0, 70)
keyInput.Font = Enum.Font.Gotham
keyInput.TextColor3 = Color3.fromRGB(255, 255, 255)
keyInput.TextSize = 18
keyInput.ClearTextOnFocus = false
keyInput.Text = ""

-- Submit Button
SubmitButton.Parent = KeyPrompt
SubmitButton.BackgroundColor3 = Color3.fromRGB(58, 58, 74)
SubmitButton.Size = UDim2.new(0, 200, 0, 50)
SubmitButton.Position = UDim2.new(0.5, -100, 0, 120)
SubmitButton.Font = Enum.Font.GothamBold
SubmitButton.Text = "Submit"
SubmitButton.TextSize = 18
SubmitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SubmitButton.AutoButtonColor = false
SubmitButton.BackgroundTransparency = 0.2
local submitUICorner = UICorner:Clone()
submitUICorner.Parent = SubmitButton

-- Key Validation & Button Functionality
SubmitButton.MouseButton1Click:Connect(function()
    -- Check if the key matches "VoidLua"
    if keyInput.Text == "VoidLua" then
        keyLabel.Text = "Key Accepted! Proceeding..."
        -- Add whatever action you need here (like showing game options)
        -- You can hide the key input frame here if desired
    else
        keyLabel.Text = "Incorrect Key! Try Again."
        keyInput.Text = ""  -- Clear the input for retry
    end
end)
