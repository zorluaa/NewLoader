local function loadScript(gameName)
    if gameName == "Assassin" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/zorluaa/Void1/refs/heads/main/15"))()
    elseif gameName == "Murder VS Sheriff Duels" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/zorluaa/voidmvsd/refs/heads/main/mvsdvoid"))()
    elseif gameName == "Fisch" then
        loadstring(game:HttpGet("https://your-link-to-game3-script"))()
    else
        print("No script available for the selected game.")
    end
end

-- Sound Effects
local buttonSound = Instance.new("Sound")
buttonSound.SoundId = "rbxassetid://YOUR_SOUND_ID"

local keyErrorSound = Instance.new("Sound")
keyErrorSound.SoundId = "rbxassetid://YOUR_ERROR_SOUND_ID"

-- User Interface (UI)
local ScreenGui = Instance.new("ScreenGui")
local MainContainer = Instance.new("Frame")
local MainFrame = Instance.new("Frame")
local TextLabel = Instance.new("TextLabel")
local Dropdown = Instance.new("TextButton")
local Game1Button = Instance.new("TextButton")
local Game2Button = Instance.new("TextButton")
local Game3Button = Instance.new("TextButton")
local KeyInput = Instance.new("TextBox")
local KeyLabel = Instance.new("TextLabel")
local UICorner = Instance.new("UICorner") -- Rounded corners

ScreenGui.Parent = game.CoreGui

MainContainer.Parent = ScreenGui
MainContainer.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainContainer.Position = UDim2.new(0.5, -300, 0.5, -150)
MainContainer.Size = UDim2.new(0, 600, 0, 400)
MainContainer.BorderSizePixel = 0
MainContainer.BackgroundTransparency = 0.1

local containerUICorner = UICorner:Clone()
containerUICorner.Parent = MainContainer

MainFrame.Parent = MainContainer
MainFrame.BackgroundColor3 = Color3.fromRGB(36, 36, 51) -- Dark Purple
MainFrame.Position = UDim2.new(0, 0, 0, 0)
MainFrame.Size = UDim2.new(0, 400, 0, 400)
MainFrame.BorderSizePixel = 0
MainFrame.BackgroundTransparency = 0.2

TextLabel.Parent = MainFrame
TextLabel.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
TextLabel.Size = UDim2.new(1, 0, 0, 50)
TextLabel.Font = Enum.Font.GothamBold
TextLabel.Text = "Void.lua Loader"
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.TextSize = 26
TextLabel.TextAlignment = Enum.TextAlignment.Center

UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = TextLabel

KeyLabel.Parent = MainFrame
KeyLabel.BackgroundColor3 = Color3.fromRGB(45, 45, 55)
KeyLabel.Size = UDim2.new(0.8, 0, 0.12, 0)
KeyLabel.Position = UDim2.new(0.1, 0, 0.2, 0)
KeyLabel.Font = Enum.Font.Gotham
KeyLabel.Text = "Enter Key: VoidLua"
KeyLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
KeyLabel.TextSize = 18
KeyLabel.TextAlignment = Enum.TextAlignment.Center

KeyInput.Parent = MainFrame
KeyInput.BackgroundColor3 = Color3.fromRGB(45, 45, 55)
KeyInput.Size = UDim2.new(0.8, 0, 0.12, 0)
KeyInput.Position = UDim2.new(0.1, 0, 0.35, 0)
KeyInput.Font = Enum.Font.Gotham
KeyInput.TextColor3 = Color3.fromRGB(255, 255, 255)
KeyInput.TextSize = 18
KeyInput.ClearTextOnFocus = false
KeyInput.Text = ""

UICorner:Clone().Parent = KeyInput

local function validateKey(inputText)
    if inputText == "VoidLua" then
        return true
    else
        keyErrorSound:Play()
        return false
    end
end

KeyInput.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        if validateKey(KeyInput.Text) then
            KeyLabel.Text = "Key Accepted! Loading..."
            KeyInput.Visible = false
            KeyLabel.Visible = false
            Dropdown.Visible = true
            Game1Button.Visible = true
            Game2Button.Visible = true
            Game3Button.Visible = true
            dropdownSound:Play()
        else
            KeyLabel.Text = "Incorrect Key! Try Again."
            KeyInput.Text = ""
        end
    end
end)

Dropdown.Parent = MainFrame
Dropdown.BackgroundColor3 = Color3.fromRGB(55, 55, 70)
Dropdown.Position = UDim2.new(0.1, 0, 0.5, 0)
Dropdown.Size = UDim2.new(0.8, 0, 0.12, 0)
Dropdown.Font = Enum.Font.Gotham
Dropdown.Text = "Select Game"
Dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
Dropdown.TextSize = 20
Dropdown.Visible = false

UICorner:Clone().Parent = Dropdown

local function styleButton(button)
    button.BackgroundColor3 = Color3.fromRGB(55, 55, 70)
    button.Size = UDim2.new(0.8, 0, 0.12, 0)
    button.Font = Enum.Font.Gotham
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextSize = 18
    button.AutoButtonColor = false
    button.Visible = false

    local buttonUICorner = UICorner:Clone()
    buttonUICorner.Parent = button

    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(75, 75, 90)
    end)

    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(55, 55, 70)
    end)
end

Game1Button.Parent = MainFrame
Game1Button.Position = UDim2.new(0.1, 0, 0.65, 0)
Game1Button.Text = "Assassin"
styleButton(Game1Button)

Game2Button.Parent = MainFrame
Game2Button.Position = UDim2.new(0.1, 0, 0.8, 0)
Game2Button.Text = "Murder VS Sheriff Duels"
styleButton(Game2Button)

Game3Button.Parent = MainFrame
Game3Button.Position = UDim2.new(0.1, 0, 0.95, 0)
Game3Button.Text = "Fisch"
styleButton(Game3Button)

Game1Button.MouseButton1Click:Connect(function()
    loadScript("Assassin")
    ScreenGui:Destroy() -- Destroy the loader after selection
end)

Game2Button.MouseButton1Click:Connect(function()
    loadScript("Murder VS Sheriff Duels")
    ScreenGui:Destroy() -- Destroy the loader after selection
end)

Game3Button.MouseButton1Click:Connect(function()
    loadScript("Fisch")
    ScreenGui:Destroy() -- Destroy the loader after selection
end)

-- Animations for a smooth transition
local function showLoaderAnimation()
    MainContainer:TweenSize(UDim2.new(0, 600, 0, 400), Enum.EasingDirection.Out, Enum.EasingStyle.Quart, 1, true)
end

showLoaderAnimation()
